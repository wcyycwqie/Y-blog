$bgColor = #50b6fa00;
$fontColor = #FFF;

// 基础样式配置
body, p, h1, h2, h3, h4, h5, h6, ul, ol, dl, li, dt, dd {
    margin: 0;
    padding: 0;
    list-style: none;
    font-family: '微软雅黑', Arial, Helvetica, sans-serif;
    color: #FFF;
}

a, a:link, a:visited, a:hover, a:active {
    text-decoration: none;
    color: #11469B;
}

input, img {
    padding: 0;
    border: none;
    /* 轮廓线 */
    outline: none;
    vertical-align: middle;
}

/* 清除浮动 */
.clearfix::after {
    content: '';
    display: block;
    clear: both;
}

.left {
    float: left;
}

.right {
    float: right;
}

.theme-container {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;

    background: $bgColor;
    background: url('/assets/img/background/1.jpg') no-repeat;
    background-size: cover;
    background-position: 0 0;
    width: 100%;

    .sidebar {
        background: $bgColor;
    }

    .navbar {
        background: $bgColor;

        .links {
            background: $bgColor;
            border-radius: 16px;
            color: #C00;
        }
    }
    
}

